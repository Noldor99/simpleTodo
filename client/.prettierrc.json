{
  "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": false,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "always",
  "importOrder": [
    "^next",
    "^react",
    "^axios",
    "^@tanstack",
    "^date-fns",
    "^framer-motion",
    "^@tabler/icons-react",
    "class-variance-authority",
    "^@/app",
    "^@/components",
    "^@/actions",
    "^@/hooks",
    "^@hookform",
    "^@/store",
    "^@/lib",
    "^@/types",
    "^@/json",
    "^[./]",
    "^.*\\.css$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
